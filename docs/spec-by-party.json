{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "autosize": {
    "type": "fit"
  },
  "config": {
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    }
  },
  "data": {
    "url": "data/vega-gender-by-party.csv"
  },
  "description": "Gender breakdown by party in house over time",
  "encoding": {
    "x": {
      "field": "session_year",
      "type": "quantitative",
      "axis": {
        "title": "",
        "values": [1860, 1875, 1900, 1925, 1950, 1975, 2000, 2019],
        "grid": false,
        "format": "4.0f"
      },
      "scale": {
        "domain": [
          1860,
          2019
        ],
        "nice": false
      }
    },
    "y": {
      "field": "prop",
      "type": "quantitative",
      "scale": {
        "domain": [
          0,
          1
        ]
      },
      "stack": null,
      "axis": {
        "values": [0, 0.25, 0.5, 0.75, 1],
        "format": "%",
        "title": "Percentage of party seats",
        "ticks": false,
        "labelPadding": 5
      }
    },
    "color": {
      "field": "party",
      "type": "nominal",
      "scale": {
        "domain": [
          "Democrat",
          "Republican"
        ],
        "range": [
          "#377EB8",
          "#E41A1C"
        ]
      },
      "legend": null
    },
    "tooltip": {
      "value": null
    }
  },
  "layer": [
    {
      "mark": "line"
    },
    {
      "transform": [
        {
          "filter": {
            "field": "party",
            "equal": "Democrat"
          }
        },
        {
          "calculate": "1",
          "as": "one"
        }
      ],
      "mark": {
        "type": "bar"
      },
      "encoding": {
        "y": {
          "field": "one",
          "type": "quantitative"
        },
        "opacity": {
          "value": 0
        },
        "tooltip": {
          "field": "caption"
        }
      }
    },
    {
      "data": {
        "values": [
          {
            "session_year": 2019,
            "party": "Democrat",
            "prop": 0.6,
            "label": "Democrats"
          },
          {
            "session_year": 2019,
            "party": "Republican",
            "prop": 0.05,
            "label": "Republicans"
          }
        ]
      },
      "mark": {
        "type": "text",
        "align": "right",
        "dx": 0
      },
      "encoding": {
        "text": {
          "field": "label",
          "type": "nominal"
        },
        "y": {
          "stack": null,
          "field": "prop",
          "type": "quantitative"
        }
      }
    }
  ]
}

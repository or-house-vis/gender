{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "data": {
    "url": "data/vega-gender-overall.csv"
  },
  "description": "Gender breakdown in house over time",
  "config": {
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    }
  },
  "autosize": {
    "type": "fit"
  },
  "encoding": {
    "x": {
      "field": "session_year",
      "type": "temporal",
      "timeUnit": "year",
      "axis": {
        "title": "",
        "values": [1860, 1875, 1900, 1925, 1950, 1975, 2000, 2018],
        "grid": false
      }
    },
    "y": {
      "field": "prop",
      "type": "quantitative",
      "scale": {
        "domain": [
          0,
          1
        ]
      },
      "axis": {
        "values": [0, 0.25, 0.5, 0.75, 1],
        "format": "%",
        "title": "Percentage of house seats",
        "ticks": false,
        "labelPadding": 5
      }
    },
    "color": {
      "field": "gender",
      "type": "nominal",
      "scale": {
        "domain": ["Female", "Male"],
        "range": ["#6F50A1", "#AAC8BD"]
      },
      "legend": null
    },
    "opacity": {
      "value": 0.8
    },
    "order": {
      "field": "gender_order",
      "type": "nominal"
    },
    "tooltip": {
      "value": null
    }
  },
  "layer": [
    {
      "transform": [
        {
          "filter": {
            "field": "data",
            "equal": "data"
          }
        },
        {
          "calculate": "if(datum.gender == 'Female', 0, 1)",
          "as": "gender_order"
        }
      ],
      "mark": "area"
    },
    {
      "transform": [
        {
          "filter": {
            "field": "data",
            "equal": "data"
          }
        },
        {
          "calculate": "if(datum.gender == 'Female', 0, 1)",
          "as": "gender_order"
        }
      ],
      "mark": "area",
      "encoding": {
        "opacity": {
          "value": 0
        },
        "tooltip": {
          "field": "caption",
          "type": "nominal"
        }
      }
    },
    {
      "transform": [
        {
          "filter": {
            "field": "data",
            "equal": "annotation"
          }
        },
        {
          "filter": {
            "field": "gender",
            "equal": "Male"
          }
        }
      ],
      "mark": {
        "type": "text",
        "size": 20,
        "align": "left",
        "baseline": "top"
      },
      "encoding": {
        "text": {
          "value": "Male"
        },
        "color": {
          "value": "black"
        },
        "opacity": {
          "value": 0.5
        }
      }
    },
    {
      "transform": [
        {
          "filter": {
            "field": "data",
            "equal": "annotation"
          }
        },
        {
          "filter": {
            "field": "gender",
            "equal": "Female"
          }
        }
      ],
      "mark": {
        "type": "text",
        "size": 20,
        "align": "right",
        "baseline": "bottom"
      },
      "encoding": {
        "text": {
          "value": "Female"
        },
        "color": {
          "value": "white"
        },
        "opacity": {
          "value": 0.5
        }
      }
    }
  ]
}
